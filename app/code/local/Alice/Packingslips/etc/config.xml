<?xml version="1.0"?>
<config>
  <modules>
    <Alice_Packingslips>
      <version>0.1.0</version>
    </Alice_Packingslips>
  </modules>
  <admin>
      <routers>
          <adminhtml>
              <args>
                  <modules>
                      <packingslips before="Mage_Adminhtml">Alice_Packingslips</packingslips>
                  </modules>
              </args>
          </adminhtml>
      </routers>
  </admin>
  <adminhtml>
    <layout>
        <updates>
            <alice_packingslips>
                <file>alice/extendedgrid.xml</file>
            </alice_packingslips>
        </updates>
    </layout>
  </adminhtml>
